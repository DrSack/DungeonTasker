<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonTasker.Views.MasterPage"
             Title="Master Page">
    <StackLayout>
        <StackLayout>
            <Image Source="mastah.png" Aspect="AspectFill" HorizontalOptions="FillAndExpand"></Image>
        </StackLayout>
        
        <Label FontSize="Medium" Text="Menu Items" HorizontalTextAlignment="Center"></Label>
        <Button Text="Tasks" Clicked="Tasks_Clicked"></Button>
        <Button Text="Inventory" Clicked="Inventory_Clicked"></Button>
        <Button Text="Dungeon" Clicked="Dungeon_Clicked"></Button>
        <Button Text="Settings" Clicked="Settings_Clicked"></Button>
    </StackLayout>
</ContentPage>