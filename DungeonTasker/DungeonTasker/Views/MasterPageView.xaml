<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonTasker.Views.MasterPageView"
             Title="Master Page"
             BackgroundColor="White">
    
    <StackLayout>
        <StackLayout>
            <Image Source="mastah.png" Aspect="AspectFill" HorizontalOptions="FillAndExpand"></Image>
        </StackLayout>

        <Label FontSize="Medium" Text="Menu Items" HorizontalTextAlignment="Center" TextColor="#212121" Margin="0,15" FontAttributes="Bold"></Label>
        <Button Text="Tasks" BackgroundColor="White" Command="{Binding Tasks_Clicked}"></Button>
        <Button Text="Inventory" BackgroundColor="White" Command="{Binding Inventory_Clicked}"></Button>
        <Button Text="Dungeon" BackgroundColor="White" Command="{Binding Dungeon_Clicked}" TextColor="#F44336"></Button>
        <Button Text="Stats" BackgroundColor="White"></Button>
        
        <StackLayout VerticalOptions="EndAndExpand" Margin="0,15">
            <Button Text="About Us" BackgroundColor="White" Command="{Binding About_Clicked}"></Button>
            <Button Text="Settings" BackgroundColor="White" Command="{Binding Settings_Clicked}"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>